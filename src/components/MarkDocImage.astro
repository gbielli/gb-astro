const { src, alt, title, width= 500, height = 400, loading = "lazy" } = Astro.props;

const imagePath = src.startsWith('/') ? src : `/${src}`;
const isRemoteImage = src.startsWith('http');
import { Image } from 'astro:assets';
---

{isRemoteImage ? (
  <Image
    src={src}
    alt={alt}
    title={title}
    width={width}
    height={height}
    loading="lazy"
    decoding="async"
    class="rounded-lg w-full shadow-sm"
  />
) : (
  <Image
    src={imagePath}
    alt={alt}
    title={title}
    width={width}
    height={height}
    loading="lazy"
    decoding="async"
    class="rounded-lg w-full shadow-sm"
  />
)}